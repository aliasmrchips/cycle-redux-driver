{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "declaration": true,

    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "listEmittedFiles": true,
    "listFiles": true,
    "sourceMap": true
  },

  "exclude": [
    "node_modules",
    "dist",
    "example",
    "test"
  ]
}
